<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false">
        <shape> 
            <solid android:color="@color/tab_touch_focus_bg"/> 
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape> 
            <solid android:color="@color/tab_touch_focus_bg"/> 
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <shape> 
            <solid android:color="@color/tab_touch_focus_bg"/> 
        </shape>
    </item>
   <item android:drawable="@color/tab_touch_bg" />
</selector>