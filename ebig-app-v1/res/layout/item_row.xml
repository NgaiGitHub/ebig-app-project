<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/default_listview_item_sel"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_8dp" 
        android:paddingLeft="@dimen/app_8dp" 
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemrow_img"
            android:layout_width="@dimen/app_36dp"
            android:layout_height="@dimen/app_36dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/welcome_android"/>

        <TextView
            android:id="@+id/itemrow_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_8dp"
            android:text="@string/app_name"
            android:textSize="@dimen/app_15sp"/>
        
        <ImageView
            android:id="@+id/itemrow_img_right"
            android:layout_width="@dimen/app_25dp"
            android:layout_height="@dimen/app_25dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />
        
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.35dp"
        android:layout_marginLeft="@dimen/app_8dp" 
        android:layout_marginRight="@dimen/app_8dp" 
        android:background="@color/default_gray"/>

</LinearLayout>