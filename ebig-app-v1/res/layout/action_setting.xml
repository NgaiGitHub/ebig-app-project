<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_curr_netinfo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_45dp"
    android:background="#ffbfbf"
    android:orientation="horizontal"
    android:visibility="gone" >

    <TextView
        android:layout_width="@dimen/app_32dp"
        android:layout_height="@dimen/app_32dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/app_16dp"
        android:background="@drawable/ahp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/app_45dp"
        android:layout_marginLeft="@dimen/app_16dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="left|center"
        android:onClick="openPhoneSet"
        android:text="@string/curr_netinfo_isnuable"
        android:textColor="@color/default_block"
        android:textSize="@dimen/app_15sp" />

</LinearLayout>