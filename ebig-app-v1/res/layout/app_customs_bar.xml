<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomActionBar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/app_48dp" >

    <Button
        android:id="@+id/customActionBarBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:drawableLeft="@drawable/custom_actionbar_back_bg"
        android:paddingLeft="@dimen/app_10dp" />

    <Button
        android:id="@+id/customActionBaCenterBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:text="@string/defautl_custom_actionbar_center_text"
        android:textColor="@color/default_custom_actionbar_textcolor"
        android:textSize="@dimen/app_20sp" />

    <Button
        android:id="@+id/customActionBarMoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:drawableRight="@drawable/custom_actionbar_more_bg"
        android:textColor="@color/default_custom_actionbar_textcolor"
        android:paddingRight="@dimen/app_10dp" />

    <ProgressBar
        android:id="@+id/customActionBarProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/app_12dp"
        android:paddingTop="@dimen/app_12dp"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/customActionBaCenterBtn" />

</RelativeLayout>
