<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/app_5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/appUpdateIco"
            android:layout_width="@dimen/app_48dp"
            android:layout_height="@dimen/app_48dp"
            android:background="@drawable/fbs"
            android:gravity="top|left" />

        <TextView
            android:id="@+id/appUpdateTitle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appUpdateIco"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="@dimen/app_5dp" />

        <TextView
            android:id="@+id/appUpdatePercentage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <ProgressBar
            android:id="@+id/appUpdateProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/app_10dp"
            android:layout_marginLeft="@dimen/app_5dp"
            android:layout_alignBottom="@id/appUpdateIco"
            android:layout_toRightOf="@+id/appUpdateIco"
            android:layout_below="@+id/appUpdateTitle" />

    </RelativeLayout>

</LinearLayout>